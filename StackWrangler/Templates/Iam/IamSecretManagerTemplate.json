{
    "Resources": {
        "#{IamSecretStore}": {
            "Type": "AWS::SecretsManager::Secret",
            "Properties": {
                "Name": {
                    "Ref": "#{IamUser}"
                },
                "Description": "Generated by the Shopping Center",
                "SecretString": {
                    "Fn::Sub": "{\n  \"AccessKeyId\": \"${#{IamAccessKey}}\",\n  \"SecretAccessKey\": \"${#{IamAccessKey}.SecretAccessKey}\"\n}\n"
                }
            },
            "DependsOn": [
                "#{IamUser}",
                "#{IamAccessKey}"
            ]
        }
    }
}